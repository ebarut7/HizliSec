@model List<ProductVM>




<div id="container">
    @foreach (ProductVM productVM in Model)
    {
        <a href="/product/details/@productVM.Id">
            <div class="container-1" >
                <img src="https://images.unsplash.com/photo-1580910051074-3eb694886505?q=80&w=1365&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" />
                <h1>@productVM.Name</h1>
                <h2>@productVM.CategoryName</h2>
                <h3>@productVM.StockAmount</h3>
                <h6>@productVM.Price ₺</h6>
                <p>@productVM.Description</p>
            </div>
        </a>
        @Html.ActionLink("Sepete Ekle","AddBasketItem","Basket",new {ProductId=productVM.Id,ProductName = productVM.Name,CategoryName = productVM.CategoryName,Quantity=1,Price = productVM.Price})
    }
</div>

